{
  "name": "wmt-worker",
  "version": "0.1.0",
  "description": "WMT Async worker application",
  "main": "start.js",
  "repository": "https://github.com/ministryofjustice/wmt-worker.git",
  "author": "Tom Swann",
  "license": "MIT",
  "engines": {
    "node": "^16",
    "npm": "8"
  },
  "scripts": {
    "prepare": "husky install",
    "start": "node --max-old-space-size=5120 start.js",
    "integration-test": "nyc mocha --recursive test/integration/ --timeout 60000 --exit --reporter mocha-simple-html-reporter --reporter-options output=test_results/integration-test-reports.html",
    "test": "npm run lint && nyc mocha --recursive test/unit/ --timeout 5000 --exit --reporter mocha-simple-html-reporter --reporter-options output=test_results/unit-test-reports.html",
    "create-views": "knex seed:run --env views",
    "seed-dev": "knex seed:run --env dev",
    "seed-ref": "knex seed:run --env app",
    "delete-dev-data": "node ./delete-data.js dev",
    "delete-ref-data": "node ./delete-data.js ref",
    "record-build-info": "node ./bin/record-build-info",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "lint": "standard"
  },
  "nyc": {
    "exclude": [
      "seed/**",
      "test/**"
    ],
    "all": true
  },
  "standard": {
    "globals": [
      "describe",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "xit"
    ],
    "ignore": [
      "data/**"
    ]
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "husky": "^8.0.1",
    "mocha": "^10.0.0",
    "mocha-simple-html-reporter": "^2.0.0",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3",
    "sinon": "^14.0.0",
    "standard": "^17.0.0",
    "supertest": "^6.2.4"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.135.0",
    "@aws-sdk/client-sqs": "^3.131.0",
    "applicationinsights": "^2.3.3",
    "bunyan": "^1.8.15",
    "bunyan-prettystream": "^0.1.3",
    "cron": "^2.1.0",
    "glob": "^8.0.3",
    "knex": "^0.95.6",
    "pg": "^8.7.3",
    "xlsx": "^0.18.5",
    "xlsx-populate": "^1.21.0"
  }
}
