{
  "name": "wmt-worker",
  "version": "0.1.0",
  "description": "WMT Async worker application",
  "main": "start.js",
  "repository": "https://github.com/ministryofjustice/wmt-worker.git",
  "author": "Tom Swann",
  "license": "MIT",
  "engines": {
    "node": "^22",
    "npm": "^10"
  },
  "scripts": {
    "prepare": "husky",
    "start-feature": "npm run start",
    "start": "node --max-old-space-size=5120 start.js",
    "build": "mkdir -p build && echo '{}' > build/placeholder.json",
    "int-test": "npm run integration-test",
    "integration-test": "nyc mocha --recursive test/integration/ --timeout 60000 --exit --reporter mocha-simple-html-reporter --reporter-options output=test_results/integration-test-reports.html",
    "test": "npm run lint && nyc mocha --recursive test/unit/ --timeout 6000 --exit --reporter mocha-simple-html-reporter --reporter-options output=test_results/unit-test-reports.html",
    "test:ci": "npm run test",
    "record-build-info": "node ./bin/record-build-info",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "lint": "standard"
  },
  "nyc": {
    "exclude": [
      "test/**"
    ],
    "all": true
  },
  "standard": {
    "globals": [
      "describe",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "xit"
    ],
    "ignore": [
      "data/**"
    ]
  },
  "devDependencies": {
    "chai": "4.3.7",
    "glob": "10.3.0",
    "husky": "8.0.3",
    "mocha": "10.8.2",
    "mocha-simple-html-reporter": "2.0.0",
    "nyc": "15.1.0",
    "proxyquire": "2.1.3",
    "sinon": "15.2.0",
    "standard": "17.1.0",
    "supertest": "6.3.3"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.621.0",
    "@aws-sdk/client-sns": "^3.839.0",
    "@aws-sdk/client-sqs": "^3.621.0",
    "applicationinsights": "^2.9.5",
    "bunyan": "^1.8.15",
    "bunyan-prettystream": "^0.1.3",
    "cron": "^2.1.0",
    "knex": "2.4.2",
    "pg": "^8.8.0",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.2/xlsx-0.20.2.tgz",
    "xlsx-populate": "^1.21.0"
  }
}
